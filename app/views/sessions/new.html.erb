<% provide :title, 'Sign in' %>

<h1>Sign in</h1>

<div class="row">
<%= form_for :session, url: sessions_path do |f| %>
  <div class="col-md-3">
    <%= f.label :email %>
    <%= f.text_field :email %>

    <%= f.label :password %>
    <%= f.text_field :password %>

    <%= f.submit "Sign in", class: 'btn btn-large btn-primary' %>

    <p>Not registered yet? <%= link_to 'Sign up now!', signup_path %></p>
  </div>
<% end %>
</div>