<% provide :title, 'Sign in' %>

<h1>Sign in</h1>

<div class="row">
<%= form_tag sessions_path do %>
  <div class="col-md-3">
    <%= label :session, :email %>
    <%= text_field :session, :email %>

    <%= label :session, :password %>
    <%= text_field :session, :password %>

    <%= submit_tag "Sign in", class: 'btn btn-large btn-primary' %>

    <p>Not registered yet? <%= link_to 'Sign up now!', signup_path %></p>
  </div>
<% end %>
</div>