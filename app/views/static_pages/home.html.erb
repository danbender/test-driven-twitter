<div class="jumbotron">
  <h1>Welcome to TDD Twitter</h1>

  <% if signed_in? %>
  <div class="row">
    <aside class="col-md-3">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>

    <div class="col-md-9">
      <h3>Micropost Feed:</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
  <% else %>
  <div class="center hero-unit">
    <%= link_to "Sign up", signup_path, class: "btn btn-lg btn-success", role: 'button' %>
  </div>
  <% end %>
</div>