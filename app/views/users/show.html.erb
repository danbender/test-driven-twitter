<%= provide :title, @user.name %>

<h1><%= gravatar_for @user %></h1>
<h1><%= @user.name %></h1>

<div>
  <aside></aside>

  <div>
    <% if @user.microposts.any? %>
      <h3>Tweets (<%= @user.microposts.count %>)</h3>
      <ol class='microposts'>
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts, renderer: BootstrapPagination::Rails %>
    <% end %>
  </div>
</div>