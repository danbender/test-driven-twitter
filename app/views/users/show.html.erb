<%= provide :title, @user.name %>

<div class="row">
  <aside class="col-md-2">
    <h1><%= gravatar_for @user %></h1>
    <h1><%= @user.name %></h1>
  </aside>

  <div class="col-md-10">
    <% if @user.microposts.any? %>
      <h3>Tweets (<%= @user.microposts.count %>)</h3>
      <ol class='microposts'>
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts, renderer: BootstrapPagination::Rails %>
    <% end %>
  </div>
</div>